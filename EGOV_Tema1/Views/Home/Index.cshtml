@model List<BigDataProject.Models.DocumentSmall>
@{
    ViewData["Title"] = "Upload Documents";
}

<br />
<br />

<div class="row">
    <div class="row" style="color: red">
        @Html.ValidationSummary()
    </div>
    <div class="col-md-8">
        <h3>Upload:</h3>
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Choose document (only *.txt, *.pdf, *.doc, *.docx):</p>
                    <input type="file" name="files" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    <br />
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h3>Documents:</h3>
        <ul>
            @foreach (var d in Model)
            {
                <li><a href="@Url.Action("GoToFile", new { fileId = d.Id})">@d.Title</a></li>
            }
        </ul>
    </div>
</div>

